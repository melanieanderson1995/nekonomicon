
<div class="card-wrapper-container">
  <div class="card-title-container">
    <span class="card-title">
      Breeds
    </span>
  </div>
  <div class="card-main-container flex flex-col">
    <table class="grid-table mx-10 my-3 table-fixed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Rare</th>
          <th>Image url</th>
          <th class="text-center w-64">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @breeds.each do |breed| %>
          <tr>
            <td><%= breed.name %></td>
            <td class="truncate w-96 flex"><%= breed.description %></td>
            <td><%= breed.rare %></td>
            <td><%= breed.image_url %></td>
            <td class="justify-center flex">
              <%= link_to 'Show', breed, class: "btn btn-purple" %>
              <%= link_to 'Edit', edit_breed_path(breed), class: "btn btn-dark-purple" %>
              <%= link_to 'Destroy', breed, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="justify-end flex">
      <%= link_to '+ New Breed', new_breed_path, class: "btn btn-purple m-2 w-40" %>
    </div>
  </div>
</div


