
<div class="card-wrapper-container">
  <div class="card-title-container">
    <span class="card-title">
      <%= @breed.name %>
    </span>
  </div>
  <div class="card-main-container flex flex-col p-4 justify-center items-center">
    <div class="flex">
      <div class="w-1/2 mr-4">
        <p class="text-white">
          <strong>Rare:</strong> <br>
          <%= @breed.rare %>
        </p>
        <br/>
        <p class="text-white">
          <strong>Description:</strong> <br>
          <%= @breed.description %>
        </p>
      </div>
      <div class="w-1/2">
        <img src="<%= @breed.image_url %>" alt="breed image">
      </div>
    </div>

    <div class="mt-4">
      <%= link_to 'Edit', edit_breed_path(@breed), class: "btn btn-yellow" %>
      <%= link_to 'Back', breeds_path, class: "btn btn-purple" %>
    </div>
  </div>
</div>

